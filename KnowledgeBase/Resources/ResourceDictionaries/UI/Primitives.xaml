<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="FocusRect">
        <Setter
            Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border
                            BorderBrush="{DynamicResource Light.StrokeColor.FocusStroke.Outer}"
                            BorderThickness="2"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                        <Border
                            BorderBrush="{DynamicResource Light.StrokeColor.FocusStroke.Inner}"
                            BorderThickness="1"
                            CornerRadius="4"
                            SnapsToDevicePixels="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>